@model Olimp.Data.Step

@{
    ViewData["Title"] = "Добавление";
}

<h1>Добавление</h1>


<h4>Этапы</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EquationType" class="control-label"></label>
                <input asp-for="EquationType" class="form-control" />
                <span asp-validation-for="EquationType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MapCoordsX" class="control-label"></label>
                <input asp-for="MapCoordsX" class="form-control" />
                <span asp-validation-for="MapCoordsX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MapCoordsY" class="control-label"></label>
                <input asp-for="MapCoordsY" class="form-control" />
                <span asp-validation-for="MapCoordsY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OlimpId" class="control-label"></label>
                <select asp-for="OlimpId" class="form-control" asp-items="ViewBag.OlimpId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

