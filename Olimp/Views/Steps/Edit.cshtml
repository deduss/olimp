@using Olimp.Data.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Olimp.Data.Step

@{
    ViewData["Title"] = "Редактирование";
    var typeChoose = new List<SelectListItem>
    {
        new(StepType.Theory.ToDisplayName(), StepType.Theory.ToString()),
        new(StepType.Practice.ToDisplayName(), StepType.Practice.ToString())
    };
}

<h1>Редактирование</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-select" asp-items="typeChoose"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MapCoordsX" class="control-label"></label>
                <input asp-for="MapCoordsX" class="form-control" />
                <span asp-validation-for="MapCoordsX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MapCoordsY" class="control-label"></label>
                <input asp-for="MapCoordsY" class="form-control" />
                <span asp-validation-for="MapCoordsY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OlimpId" class="control-label"></label>
                <select asp-for="OlimpId" class="form-control" asp-items="ViewBag.OlimpId"></select>
                <span asp-validation-for="OlimpId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

