@model IEnumerable<Olimp.Data.Step>

@{
    ViewData["Title"] = "Шаги";
}

<h1>Шаги</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MapCoordsX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MapCoordsY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Olimp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EquationType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MapCoordsX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MapCoordsY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Olimp.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
